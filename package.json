{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "4.2.0"
  },
  "dependencies": {
    "hexo": "^4.0.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-feed": "^2.2.0",
    "hexo-generator-sitemap": "^2.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-pug": "^1.0.0",
    "hexo-renderer-stylus": "^1.1.0",
    "hexo-server": "^1.0.0"
  },
  "scripts": {
    "dev": "nodemon -x \"npm run bundleserve\"",
    "bundleserve": "npm run create-bundles && npm run serve",
    "install-bundles": "cd ./themes/hive-hexo/ && npm i",
    "create-bundles": " cd ./themes/hive-hexo/ && npm run build",
    "build": "hexo build",
    "serve": "hexo server"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js,json,pug,md,scss",
    "ignore": [
      "db.json",
      "/themes/hive-hexo/source/",
      "/themes/hive-hexo/node_modules/"
    ]
  },
  "devDependencies": {
    "nodemon": "^2.0.3"
  }
}
